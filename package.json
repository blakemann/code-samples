{
  "name": "@blakemann/code-samples",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "packageManager": "yarn@4.5.3",
  "workspaces": [
    "build/*",
    "packages/*"
  ],
  "scripts": {
    "storybook": "yarn workspace @build/storybook open",
    "storybook:vue": "yarn workspace @build/storybook open:vue",
    "storybook:react": "yarn workspace @build/storybook open:react",
    "storybook:build": "yarn workspace @build/storybook build",
    "storybook:build:vue": "yarn workspace @build/storybook build:vue",
    "storybook:build:react": "yarn workspace @build/storybook build:react",
    "build": "yarn workspaces foreach --all -p --exclude 'build/*' run build",
    "test:unit": "vitest",
    "test:unit:dev": "vitest --ui",
    "lint": "yarn lint:js && yarn lint:scss",
    "lint:js": "eslint",
    "lint:scss": "stylelint '+(packages)/**/*.+(vue|scss|css|sass)'"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@stylistic/eslint-plugin-js": "^2.11.0",
    "@stylistic/stylelint-plugin": "^3.1.1",
    "@vitest/coverage-v8": "2.1.8",
    "@vitest/eslint-plugin": "^1.1.14",
    "@vitest/ui": "^2.1.8",
    "@vue/eslint-config-typescript": "^14.3.0",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.16.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.0",
    "eslint-plugin-storybook": "^0.11.1",
    "eslint-plugin-vue": "^9.32.0",
    "globals": "^15.13.0",
    "hygen": "^6.2.11",
    "lodash-es": "^4.17.21",
    "postcss-html": "^1.7.0",
    "stylelint": "^16.11.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-scss": "^6.10.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.0.1",
    "vite-svg-loader": "^5.1.0",
    "vitest": "^2.1.8",
    "vue": "^3.5.13"
  }
}
